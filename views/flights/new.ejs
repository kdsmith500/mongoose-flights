<%- include('../partials/header') %>

<div class="background-div">
  <section class="page-flex-column">
    <h2>Enter new flight information.</h2>
    <form class="new-form" action="/flights" method="POST">
      <label class="new-airline">Airline:
        <select class="new-input-airline" name="airline">
          <option value="American">American</option>
          <option value="Southwest">Southwest</option>
          <option value="United">United</option>
        </select>
      </label>
      <label class="new-number">Flight Number:
        <input class="new-input-number" type="number" name="flightNo">
      </label>
      <label class="new-airport">Airport:
        <select class="new-input-airport" name="airport">
            <option value="AUS">AUS</option>
            <option value="DAL">DAL</option>
            <option value="LAX">LAX</option>
            <option value="SEA">SEA</option>
        </select>
      </label>
      <label class="new-departure">Departure Time:
        <input class="new-input-departure" type="datetime-local" name="departs">
      </label>
      <button class="new-button" type="submit">Add</button>
    </form>
  </section>
</div>

<%- include('../partials/footer') %>