<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="https://fonts.googleapis.com/css?family=Lobster" rel="stylesheet">
    <link rel='stylesheet' href='/stylesheets/style.css'>
    <title>Mongoose-Flights</title>
</head>
<body>
    <section class="page-flights">
        <header>
            <img class="mongoose-flights-icon-s" src="/images/mongoose-flights-icon.png">
            <h1>Mongoose Flights</h1>
        </header>
        <nav class="flights-nav"> 
            <a href="/">Home</a>
            <a href="/flights/new">Add Flight</a>
        </nav>
        <table>
            <thead>
                <tr>
                    <th>Airline</th>
                    <th>Flight Number</th>
                    <th>Departure Time</th>
                </tr>
            </thead>
            <tbody>
                <% flights.forEach(function(f) { %>
                    <tr>
                        <% var currentDate = new Date(); %>
                        <td><%= f.airline %></td>
                        <td><%= f.flightNo %></td>
                        <% if (f.departs < currentDate) { %>
                            <td style="color: red"><%= f.departs %></td>
                        <% } else { %>
                            <td><%= f.departs %></td>
                        <% } %>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </section>
</body>
</html>